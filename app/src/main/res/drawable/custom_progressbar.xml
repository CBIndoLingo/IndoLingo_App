<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/progressbar_bg">
        <shape>
            <corners android:radius="10dp"/>
            <gradient android:startColor="@color/grey_button"
                android:endColor="@color/white_text"
                android:angle="270"/>
        </shape>
    </item>

    <item android:id="@+id/progressbar_progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="50dp"/>
                <gradient android:startColor="@color/blue_background"
                    android:centerColor="@color/white_text"
                    android:centerY="1.0"
                    android:angle="90"/>
            </shape>
        </clip>
    </item>

</layer-list>