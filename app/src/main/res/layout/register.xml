<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_background"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_button"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="28sp"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:textColor="@color/white_text"/>

    </LinearLayout>

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        android:layout_marginBottom="-3dp"
        android:textColorHint="@color/grey_button"
        android:background="@drawable/sign_in_edit_text"/>

    <EditText
        android:id="@+id/signuppassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/email_signup"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:textColorHint="@color/grey_button"
        android:padding="10dp"
        android:background="@color/white_text"/>
    <EditText
        android:id="@+id/signupcnfpassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/signuppassword"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:textColorHint="@color/grey_button"
        android:padding="10dp"
        android:background="@color/white_text"/>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupcnfpassword"
        android:layout_marginTop="24dp"
        android:background="@drawable/sign_in_button_bg"
        android:text="SIGN Up"
        android:textColor="@color/blue_background"
        android:textSize="19sp"
        android:elevation="20dp"
        android:shadowColor="@color/colorPrimary"/>

</RelativeLayout>